{
  "compilerOptions": {
    "target": "ES2020",                  // Or ESNext
    "module": "NodeNext",                // Must match resolution style
    "moduleResolution": "NodeNext",      // Important for ESM projects
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}